<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/idea_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <TextView
        android:id="@+id/idea_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Idea Item Title"
        android:textSize="16sp"
        android:layout_margin="2dp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/idea_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_margin="2dp"
        tools:text="Secondary line text Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nam massa quam. Lorem ipsum dolor sit amet, consectetur Nam adipiscing elit. Nam massa quam."/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/idea_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|left"
            android:src="@drawable/ic_favorite_border_black"
            android:adjustViewBounds="false"/>

        <TextView
            android:id="@+id/idea_creatorId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="garr741"
            android:textStyle="italic"
            android:layout_margin="4dp"
            android:layout_gravity="end|right"
            android:textSize="16sp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e0e0e0" />
</LinearLayout>